{
  "mission": {
    "pattern": "^S4$",
    "description": "Sentinel-4 mission (payload on Meteosat Third Generation Sounder satellites)"
  },
  "instrument": {
    "pattern": "^UVN$",
    "description": "Ultraviolet\u2013Visible\u2013Near infrared spectrometer"
  },
  "processing_level": {
    "pattern": "^(L0|L1A|L1B|L1C|L2A)$",
    "description": "Processing level code",
    "details": {
      "L1B": "Level-1B calibrated radiances",
      "L2": "Level-2 geophysical products"
    }
  },
  "product_type": {
    "pattern": "^[A-Z0-9_]{3,20}$",
    "description": "Product type identifier, varies by processing and observation mode"
  },
  "start_datetime": {
    "pattern": "^(?:19|20)\\d\\d(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\\d|3[01])T(?:[01]\\d|2[0-3])(?:[0-5]\\d){2}$",
    "description": "UTC date and time when acquisition started, format YYYYMMDDThhmmss, valid ranges enforced"
  },
  "stop_datetime": {
    "pattern": "^(?:19|20)\\d\\d(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\\d|3[01])T(?:[01]\\d|2[0-3])(?:[0-5]\\d){2}$",
    "description": "UTC date and time when acquisition ended, format YYYYMMDDThhmmss, valid ranges enforced"
  },
  "absolute_orbit": {
    "pattern": "^\\d{6}$",
    "description": "Absolute orbit number (6 digits) - in geostationary context, may be a fixed or synthetic counter"
  },
  "product_unique_id": {
    "pattern": "^[0-9A-F]{4,12}$",
    "description": "Unique product identifier (hexadecimal, length 4\u201312)"
  },
  "extension": {
    "pattern": "^\\.S4PROD$",
    "description": "Sentinel-4 product package format"
  },
  "valid_example": "S4_UVN_L2_NO2_20250105T103021_20250105T105021_000123_ABCD1234.S4PROD",
  "filename_pattern": "^(?P<mission>S4)_(?P<instrument>UVN)_(?P<processing_level>L1|L2)_(?P<product_type>[A-Z0-9_]{3,20})_(?P<start_datetime>(?:19|20)\\d\\d(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\\d|3[01])T(?:[01]\\d|2[0-3])(?:[0-5]\\d){2})_(?P<stop_datetime>(?:19|20)\\d\\d(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\\d|3[01])T(?:[01]\\d|2[0-3])(?:[0-5]\\d){2})_(?P<absolute_orbit>\\d{6})_(?P<product_unique_id>[0-9A-F]{4,12})(?P<extension>\\.S4PROD)$",
  "fields_order": [
    "mission",
    "instrument",
    "processing_level",
    "product_type",
    "start_datetime",
    "stop_datetime",
    "absolute_orbit",
    "product_unique_id",
    "extension"
  ]
}