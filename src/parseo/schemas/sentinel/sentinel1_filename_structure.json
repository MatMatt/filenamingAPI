{
  "mission": {
    "pattern": "^(S1A|S1B)$",
    "description": "Satellite & mission number (Sentinel-1A or Sentinel-1B)"
  },
  "instrument_mode": {
    "pattern": "^(SM|IW|EW|WV)$",
    "description": "Acquisition mode: SM=Stripmap, IW=Interferometric Wide swath, EW=Extra Wide swath, WV=Wave mode"
  },
  "product_segment": {
    "pattern": "^(?:SLC__|OCN__|GRD[FMH]_)$",
    "description": "Product type combined with resolution class: SLC__ (underscore resolution), OCN__ (underscore resolution), GRDF_/GRDH_/GRDM_ (Full/High/Medium resolution for GRD)",
    "notes": "Processing level can be inferred: SLC__=L1 SLC, GRDx_=L1 GRD, OCN__=L2 OCN"
  },
  "polarisation": {
    "pattern": "^(?:[01]S(?:SH|SV|DH|DV)|2SDV)$",
    "codes": [
      "1SSH", "1SSV", "1SDH", "1SDV",
      "0SSH", "0SSV", "0SDH", "0SDV",
      "2SDV"
    ],
    "description": "Polarisation token: [level]S[mode] (e.g., 1SDV)",
    "details": {
      "1SSH": "Level-1 single-look, single HH",
      "1SSV": "Level-1 single-look, single VV",
      "1SDH": "Level-1 single-look, dual HH+HV",
      "1SDV": "Level-1 single-look, dual VV+VH",
      "0SSH": "Level-0 single-look, single HH",
      "0SSV": "Level-0 single-look, single VV",
      "0SDH": "Level-0 single-look, dual HH+HV",
      "0SDV": "Level-0 single-look, dual VV+VH",
      "2SDV": "Level-2 OCN, single VV"
    }
  },
  "sensing_datetime": {
    "pattern": "^\\d{8}T\\d{6}$",
    "description": "UTC date and time when acquisition started in format YYYYMMDDThhmmss"
  },
  "stop_datetime": {
    "pattern": "^\\d{8}T\\d{6}$",
    "description": "UTC date and time when acquisition ended in format YYYYMMDDThhmmss"
  },
  "absolute_orbit": {
    "pattern": "^A\\d{6}$",
    "description": "Absolute orbit number (A + 6 digits)"
  },
  "mission_datatake": {
    "pattern": "^D\\d{6}$",
    "description": "Mission datatake identifier (D + 6 digits)"
  },
  "product_unique_id": {
    "pattern": "^[0-9A-F]{4,6}$",
    "description": "Unique product identifier (hexadecimal, length 4\u20136)"
  },
  "extension": {
    "pattern": "^\\.SAFE$",
    "description": "Sentinel SAFE format container"
  },
  "valid_example": "S1A_IW_SLC__1SDV_20250105T053021_20250105T053048_A054321_D068F2E_ABC123.SAFE",
  "filename_pattern": "^(?P<mission>S1A|S1B)_(?P<instrument_mode>SM|IW|EW|WV)_(?P<product_segment>SLC__|OCN__|GRD[FMH]_)(?P<polarisation>(?:[01]S(?:SH|SV|DH|DV)|2SDV))_(?P<sensing_datetime>(?:19|20)\\d\\d(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\\d|3[01])T(?:[01]\\d|2[0-3])(?:[0-5]\\d){2})_(?P<stop_datetime>(?:19|20)\\d\\d(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\\d|3[01])T(?:[01]\\d|2[0-3])(?:[0-5]\\d){2})_(?P<absolute_orbit>A\\d{6})_(?P<mission_datatake>D[0-9A-F]{6,7})_(?P<product_unique_id>[0-9A-F]{4,12})(?P<extension>\\.SAFE)$",
  "fields_order": [
    "mission",
    "instrument_mode",
    "product_segment",
    "polarisation",
    "sensing_datetime",
    "stop_datetime",
    "absolute_orbit",
    "mission_datatake",
    "product_unique_id",
    "extension"
  ]
}