{
  "spacecraft_id": {
    "pattern": "^LT04$",
    "description": "Landsat 4 Thematic Mapper (TM)"
  },
  "processing_level": {
    "pattern": "^(L1TP|L1GT|L1GS|L2SP|L2SR)$",
    "description": "Processing level code for Landsat products",
    "details": {
      "L1TP": "Level-1 Terrain Precision",
      "L1GT": "Level-1 Systematic Terrain",
      "L1GS": "Level-1 Systematic",
      "L2SP": "Level-2 Surface Reflectance Product",
      "L2SR": "Level-2 Surface Reflectance"
    }
  },
  "pathrow": {
    "pattern": "^(?:0[0-9]{2}|1[0-9]{2}|2[0-2][0-9]|23[0-3])(?:0[0-9]{2}|1[0-9]{2}|2[0-4][0-9])$",
    "description": "WRS-2 Path (001\u2013233) and Row (001\u2013248) combined into a 6-digit code"
  },
  "acquisition_date": {
    "pattern": "^(?:19|20)\\d\\d(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\\d|3[01])$",
    "description": "Acquisition date in format YYYYMMDD, valid ranges enforced"
  },
  "processing_date": {
    "pattern": "^(?:19|20)\\d\\d(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\\d|3[01])$",
    "description": "Processing date in format YYYYMMDD, valid ranges enforced"
  },
  "collection_number": {
    "pattern": "^(0[1-9]|[1-9][0-9])$",
    "description": "Collection number (01\u201399, currently 02 for Collection 2)"
  },
  "collection_category": {
    "pattern": "^(T1|T2|RT)$",
    "description": "Collection category: T1=Tier 1, T2=Tier 2, RT=Real Time"
  },
  "extension": {
    "pattern": "^\\.(TIF|tar\\.gz)$",
    "description": "File extension: .TIF for image files, .tar.gz for product bundles"
  },
  "valid_example": "LT04_L1TP_193024_20230814_20230827_02_T1.TIF",
  "filename_pattern": "^(?P<spacecraft_id>LT04)_(?P<processing_level>L1TP|L1GT|L1GS|L2SP|L2SR)_(?P<pathrow>(?:0[0-9]{2}|1[0-9]{2}|2[0-2][0-9]|23[0-3])(?:0[0-9]{2}|1[0-9]{2}|2[0-4][0-9]))_(?P<acquisition_date>(?:19|20)\\d\\d(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\\d|3[01]))_(?P<processing_date>(?:19|20)\\d\\d(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\\d|3[01]))_(?P<collection_number>(0[1-9]|[1-9][0-9]))_(?P<collection_category>T1|T2|RT)(?P<extension>\\.(?:TIF|tar\\.gz))$",
  "fields_order": [
    "spacecraft_id",
    "processing_level",
    "pathrow",
    "acquisition_date",
    "processing_date",
    "collection_number",
    "collection_category",
    "extension"
  ]
}