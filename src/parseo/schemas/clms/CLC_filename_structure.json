{
  "update_campaign_year": {
    "pattern": "^(?:19\\d{2}|20\\d{2})$",
    "description": "Year of the CLC campaign when the file was last modified/updated"
  },
  "theme": {
    "codes": ["CLC", "CHA"],
    "pattern": "^(CLC|CHA)$",
    "description": "Layer type: CLC = status, CHA = change"
  },
  "status_year": {
    "pattern": "^(?:19\\d{2}|20\\d{2})$",
    "description": "Reference year for status products (only when theme=CLC)",
    "optional": true
  },
  "change_start_year_yy": {
    "pattern": "^\\d{2}$",
    "description": "Two-digit start year for change products (only when theme=CHA)",
    "optional": true
  },
  "change_end_year_yy": {
    "pattern": "^\\d{2}$",
    "description": "Two-digit end year for change products (only when theme=CHA)",
    "optional": true
  },
  "raster_change_part": {
    "codes": ["12", "18"],
    "pattern": "^(12|18)$",
    "description": "Only for raster CHANGE split: 12 = consumption (‘from’), 18 = formation (‘to’)",
    "optional": true
  },
  "release_year": {
    "pattern": "^20\\d{2}$",
    "description": "Year of CLC data release (token after 'V')"
  },
  "release_number": {
    "pattern": "^\\d{2}(?:b\\d+|u\\d+)?$",
    "description": "Sequential release tag: e.g., 20 (final), 20b2 (beta 2), 20u1 (update 1)"
  },
  "country_code": {
    "pattern": "^[A-Z]{2}$",
    "description": "ISO-like country code used in DOM deliveries (e.g., FR)",
    "optional": true
  },
  "dom_code": {
    "pattern": "^[A-Z]{3}$",
    "description": "Overseas department/territory (e.g., GLP, GUF, MTQ, MYT, REU)",
    "optional": true
  },
  "bundle_tail_variant": {
    "codes": [
      "fgdb",
      "geoPackage",
      "raster<res>",
      "<marker>.<ext>"
    ],
    "description": "Optional delivery tail used in published bundles",
    "optional": true
  },
  "raster_resolution": {
    "codes": ["20m", "100m"],
    "pattern": "^(20m|100m)$",
    "description": "Resolution used with 'raster<res>' tail",
    "optional": true
  },
  "package_marker": {
    "codes": ["VECTOR", "RASTER", "DATA", "GDB", "DOCS", "META"],
    "pattern": "^(VECTOR|RASTER|DATA|GDB|DOCS|META)$",
    "description": "Marker used in '<marker>.<ext>' tail",
    "optional": true
  },
  "extension": {
    "codes": ["tif", "tiff", "vrt", "img", "gpkg", "shp", "geojson", "gdb", "gml"],
    "pattern": "^(tif|tiff|vrt|img|gpkg|shp|geojson|gdb|gml)$",
    "description": "File extension in '<marker>.<ext>' tail (no leading dot)",
    "optional": true
  },
  "valid_examples": [
    "U2006_CLC2000_V2020_20b2",
    "U2018_CHA1218_V2020_20u1",
    "U2018_CHA1218_12_V2020_20u1",
    "U2018_CHA1218_18_V2020_20u1",
    "U2006_CLC2000_V2018_20b2_FR_GLP",
    "U2018_CLC2018_V2020_20u1_fgdb",
    "U2018_CLC2018_V2020_20u1_geoPackage",
    "U2018_CLC2018_V2020_20u1_raster100m",
    "U2018_CHA1218_V2020_20u1_VECTOR.geojson"
  ],
  "filename_pattern": "^U(?P<update_campaign_year>19\\d{2}|20\\d{2})_(?P<theme>CLC|CHA)(?:(?P<status_year>19\\d{2}|20\\d{2})|(?P<change_start_year_yy>\\d{2})(?P<change_end_year_yy>\\d{2}))(?:_(?P<raster_change_part>12|18))?_V(?P<release_year>20\\d{2})_(?P<release_number>\\d{2}(?:b\\d+|u\\d+)?)(?:_(?P<country_code>[A-Z]{2})_(?P<dom_code>[A-Z]{3}))?(?:_(?:fgdb|geoPackage|raster(?P<raster_resolution>20m|100m)|(?P<package_marker>VECTOR|RASTER|DATA|GDB|DOCS|META)\\.(?P<extension>tif|tiff|vrt|img|gpkg|shp|geojson|gdb|gml)))?$",
  "fields_order": [
    "update_campaign_year",
    "theme",
    "status_year",
    "change_start_year_yy",
    "change_end_year_yy",
    "raster_change_part",
    "release_year",
    "release_number",
    "country_code",
    "dom_code",
    "raster_resolution",
    "package_marker",
    "extension"
  ]
}
